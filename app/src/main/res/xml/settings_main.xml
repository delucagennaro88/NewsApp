<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/title">

    <ListPreference
        android:defaultValue="@string/order_by_default"
        android:entries="@array/order_by_labels"
        android:entryValues="@array/order_by_values"
        android:key="@string/order_by_key"
        android:title="@string/order_by_label" />

    <EditTextPreference
        android:defaultValue="@string/title_default"
        android:inputType="text"
        android:key="@string/title_key"
        android:selectAllOnFocus="true"
        android:title="@string/title_label" />

</PreferenceScreen>